{
  "name": "Hopverkefni-1-Real",
  "version": "1.0.0",
  "description": "Hópverkefni 1 í Vefforritun",
  "main": "app.js",
  "scripts": {
    "browser-sync": "browser-sync start --server --files index.html styles.css",
    "sass": "node-sass styles.scss styles.css",
    "sass-watch": "node-sass --source-map-embed --watch styles.scss --recursive styles.css",
    "sass-map": "node-sass --source-map-embed styles.scss styles.css",
    "dev": "npm-run-all --parallel sass-watch browser-sync",
    "lint-css": "stylelint styles.css --syntax css",
    "lint-scss": "stylelint styles.scss --syntax scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bearman265/Hopverkefni-1-Real"
  },
  "keywords": [
    "hópverkefni 1",
    "vefforritun"
  ],
  "author": "Hrafnkell Þráinsson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bearman265/Hopverkefni-1-Real/issues"
  },
  "homepage": "https://github.com/Bearman265/Hopverkefni-1-Real#readme",
  "dependencies": {
    "browser-sync": "^2.26.3",
    "node-sass": "^4.9.4",
    "postcss": "^7.0.5"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "stylelint": "^9.6.0",
    "stylelint-config-primer": "^2.2.10"
  }
}
